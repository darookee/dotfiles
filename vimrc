" php_getset
let b:phpgetset_getterTemplate = 
          \ "\n" .
          \ "/**\n" .
          \ " * Get %varname%.\n" .
          \ "\n" .
          \ " * @return %varname%\n" .
          \ " */\n" .
          \ "function %funcname%() {\n" .
          \ "   return $this->%varname%;\n" .
          \ "}"

let b:phpgetset_setterTemplate = 
          \ "\n" .
          \ "/**\n" .
          \ " * Set %varname%.\n" .
          \ "\n" .
          \ " * @return %varname%\n" .
          \ " */\n" .
          \ "function %funcname%($%varname%) {\n" .
          \ "   $this->%varname% = $%varname%;\n" .
          \ "}"

