#!/bin/bash
#
# takes a screenshot, blurs it and locks the screen
#
# requires:
#   imagemagick (import + mogrify)
#   i3lock
#
# Author: Nils Uliczka
#

import -window root -screen ~/.lock.png &&
convert ~/.lock.png -scale 50% -scale 200% -fill black -colorize 25% ~/.lock.png &&
convert ~/.lock.png ~/.lock-icon.png -gravity center -composite -matte ~/.lock.png &&
i3lock -i ~/.lock.png
