[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = /home/darookee/.gitignore
    fileMode = false
[init]
    templatedir = ~/.git_template
[color]
    ui = auto
[color "branch"]
    current = green
    local = cyan
    remote = magenta
[color "diff"]
    whitespace = red reverse
    meta = yellow
    frag = cyan
    old = red
    new = green
[color "status"]
    branch = green
    added = green
    changed = yellow
    untracked = red
[push]
    default = upstream
    followTags = true
[merge]
    ff = only
[rebase]
    stat = true
    autoStash = true
[transfer]
    fsckobjects = true
[status]
    showUntrackedFiles = all
[credential]
    helper = store
[include]
    path = ~/.config/git/local
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[alias]
    ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
[fetch]
    fsckobjects = true
[git]
    pager = vim
