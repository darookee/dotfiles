[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = /home/darookee/.gitignore
    filemode = false
[init]
    templatedir = ~/.git_template
[color]
    ui = auto
[color "branch"]
    current = green
    local = cyan
    remote = magenta
[color "diff"]
    whitespace = red reverse
    meta = yellow
    frag = cyan
    old = red
    new = green
[color "status"]
    branch = green
    added = green
    changed = yellow
    untracked = red
[push]
    default = upstream
    followTags = true
[merge]
    ff = only
[rebase]
    stat = true
    autoStash = true
[transfer]
    fsckobjects = true
[status]
    showUntrackedFiles = all
[credential]
    helper = store
[include]
    path = ~/.config/git/local
