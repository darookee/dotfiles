[color]
    ui = auto

[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = /home/darookee/.gitignore
    filemode = false

[color "branch"]
    current = green
    local = cyan
    remote = magenta

[color "diff"]
    whitespace = red reverse
    meta = yellow
    frag = cyan
    old = red
    new = green

[color "status"]
    branch = green
    added = green
    changed = yellow
    untracked = red

[push]
    default = matching
[init]
    templatedir = ~/.git_template
[include]
    path = .config/git/local
